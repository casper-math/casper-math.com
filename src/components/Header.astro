---
import GithubLogo from './GithubLogo.astro'
import Logo from './Logo.astro'

type Props = { title: string; subtitle?: string; description?: string }

const { title, subtitle, description } = Astro.props
---

<header class="h-full bg-gradient-to-b from-blue-700 to-blue-500">
    <div class="container">
        <nav class="flex items-center justify-between pt-10 md:pt-6">
            <a href="/" class="flex items-center py-3 space-x-4 text-xl font-bold text-white md:text-base">
                <Logo style="fill-white w-6" />
                <span>Casper Math</span>
            </a>

            <ul class="flex items-center space-x-6 text-lg md:space-x-3 md:text-base">
                <li><a href="/" class="py-4 text-white hover:underline">Home</a></li>
                <li><a href="#" class="py-4 text-white hover:underline">Docs</a></li>
                <li>
                    <a href="https://github.com/casper-math/casper-math">
                        <GithubLogo style="w-6 fill-white hover:opacity-75" />
                    </a>
                </li>
            </ul>
        </nav>

        <div class="py-32 lg:py-24 md:pt-16 md:pb-24 sm:pt-8 sm:pb-16">
            {subtitle && <p class="mb-2 font-bold tracking-wide text-white uppercase opacity-80">{subtitle}</p>}
            <h1 class="text-5xl font-bold text-white md:text-4xl sm:text-3xl">{title}</h1>
            {description && <p class="mt-6 text-xl md:text-base text-slate-100">{description}</p>}
        </div>
    </div>
</header>
