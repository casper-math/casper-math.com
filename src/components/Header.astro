---
import GithubLogo from './GithubLogo.astro'

type Props = { title: string }

const { title } = Astro.props
---

<header class="h-full bg-gradient-to-b from-blue-700 to-blue-500">
    <div class="max-w-screen-lg mx-auto">
        <nav class="flex items-center justify-between pt-10">
            <a href="/" class="flex items-center space-x-4 text-xl font-bold text-white">Casper Math</a>

            <ul class="flex items-center space-x-6 text-lg">
                <li><a href="/" class="text-white hover:underline">Home</a></li>
                <li><a href="#" class="text-white hover:underline">Docs</a></li>
                <li><a href="#"><GithubLogo style="w-6 fill-white hover:opacity-75" /></a></li>
            </ul>
        </nav>

        <div class="py-32">
            <p class="mb-2 font-bold tracking-wide text-white uppercase opacity-80">Documentation</p>
            <h1 class="text-5xl font-bold text-white">{title}</h1>
        </div>
    </div>
</header>
